{% extends 'base.html.twig' %}

{% block title %}Hello LoginController!{% endblock %}

{% block body %}
    <div class="container section-padding">
        {% if error %}
            <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}
        {% if app.user %}
            <div class="mb-3" id="mb-3-logOut">
                Vous êtes connecté en tant que "{{ app.user.username }}"",<br> <a href="{{ path('app_logout') }}">Déconnexion</a>
            </div>
        {% endif %}
        <div class="column large-12 tab-12">
            {% for message in app.flashes('success') %}
                <div class="flash-notice">
                    {{ message }}
                </div>
            {% endfor %}
        </div>
        <form action="{{ path('app_login') }}" method="post">
            <label for="username">Email:</label>
            <input type="text" id="username" name="_username" value="{{ last_username }}"/>

            <label for="password">Password:</label>
            <input type="password" id="password" name="_password"/>

            {# If you want to control the URL the user is redirected to on success #}
            <input type="hidden" name="_target_path" value="/home"/>
            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

            <button type="submit" class="btn btn-primary mt-4">Se connecter</button>
        </form>
    </div>
    <style>
        label {
            padding-top: 20px;
            {# display: block; #}
        }
        form input {
            min-width: -webkit-fill-available;
        }
    </style>
{% endblock %}
